<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/listNumberEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/groupEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/listNumberEditText"
        app:layout_constraintEnd_toEndOf="@+id/listNumberEditText"
        app:layout_constraintStart_toStartOf="@+id/listNumberEditText"
        android:layout_marginBottom="24dp"/>

    <EditText
        android:id="@+id/lovelyFilmEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/listNumberEditText"
        app:layout_constraintStart_toStartOf="@+id/listNumberEditText"
        app:layout_constraintTop_toBottomOf="@+id/listNumberEditText"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/saveDataButton"
        android:text="@string/save_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/lovelyFilmEditText"
        app:layout_constraintStart_toStartOf="@+id/lovelyFilmEditText"
        app:layout_constraintTop_toBottomOf="@+id/lovelyFilmEditText"
        android:layout_marginTop="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>