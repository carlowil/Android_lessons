<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/fileTextEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textFromFileTextView"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/writeTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write data"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/fileTextEditText"
        app:layout_constraintStart_toStartOf="@+id/fileTextEditText"
        app:layout_constraintTop_toBottomOf="@+id/fileTextEditText"/>

    <TextView
        android:id="@+id/textFromFileTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>