<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/maikovsieTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Маяковский :D"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/mayakovsieImage"
        app:layout_constraintEnd_toEndOf="@+id/mayakovsieImage"
        app:layout_constraintStart_toStartOf="@+id/mayakovsieImage"
        android:layout_marginBottom="12dp"/>

    <ImageView
        android:id="@+id/mayakovsieImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/maikovsie"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>