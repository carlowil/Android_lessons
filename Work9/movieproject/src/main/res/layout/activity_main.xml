<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/filmData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Нет данных!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonShowFilm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Отобразить любимый фильм"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/filmData"
        app:layout_constraintStart_toStartOf="@+id/filmData"
        app:layout_constraintTop_toBottomOf="@+id/filmData" />

    <EditText
        android:id="@+id/editTextFilm"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Название фильма"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/buttonShowFilm"
        app:layout_constraintStart_toStartOf="@+id/buttonShowFilm"
        app:layout_constraintTop_toBottomOf="@+id/buttonShowFilm"/>

    <Button
        android:id="@+id/buttonSaveFilm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сохранить любимый фильм"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/editTextFilm"
        app:layout_constraintStart_toStartOf="@+id/editTextFilm"
        app:layout_constraintTop_toBottomOf="@+id/editTextFilm" />

</androidx.constraintlayout.widget.ConstraintLayout>